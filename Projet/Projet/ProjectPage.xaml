<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:projet="clr-namespace:Projet"
             xmlns:model="clr-namespace:Projet.Model;assembly=Projet"
             x:Class="Projet.ProjectPage"
             x:DataType="projet:ProjectViewModel">
    <ContentPage.Content>
        <StackLayout Margin="20, 10">
            <Button HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="250"
                    HeightRequest="40"
                    Text="Add new task"
                    Command="{Binding AddTaskClick}"
                    BackgroundColor="LimeGreen"/>

            <Label Text="{Binding Project.Name}"
                   FontSize="30"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Margin="0, 20, 0, 20"/>
            
            <Label Text="{Binding Project.Description}"
                   FontSize="15"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Margin="0, 0, 0, 10"/>
            
            <Label Text="Tasks:"
                   FontSize="30"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"/>
            
            <ListView HasUnevenRows="True"
                      ItemsSource="{Binding Tasks}"
                      SelectedItem="{Binding ChosenTask}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Task">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal"
                                         VerticalOptions="CenterAndExpand">
                                <Label 
                                    VerticalOptions="CenterAndExpand"
                                    Text="{Binding Name}"
                                    FontSize="20"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid VerticalOptions="StartAndExpand"
                  ColumnSpacing="30"
            >
                <!-- IsVisible="{Binding Clickable}" -->
                <Grid.RowDefinitions>
                    
                </Grid.RowDefinitions>
                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        HeightRequest="80"
                        Text="See task"
                        Command="{Binding TaskClick}"
                        BackgroundColor="CornflowerBlue"
                        HorizontalOptions="Start"/>
                <Button Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        WidthRequest="250"
                        HeightRequest="80"
                        Text="Delete tasks"
                        Command="{Binding DeleteTaskClick}"
                        BackgroundColor="IndianRed"
                        HorizontalOptions="End"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>