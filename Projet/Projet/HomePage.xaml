<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:projet="clr-namespace:Projet"
             xmlns:model="clr-namespace:Projet.Model;assembly=Projet"
             x:Class="Projet.HomePage"
             x:DataType="projet:HomeModelView">
    <ContentPage.Content>
        <StackLayout Margin="20, 10">
            <Grid VerticalOptions="StartAndExpand"
                  ColumnSpacing="70">
                <Grid.RowDefinitions>
                    
                </Grid.RowDefinitions>
                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        HeightRequest="80"
                        Text="Your profile"
                        Command="{Binding ProfileClick}"
                        BackgroundColor="CornflowerBlue"
                        Margin="0, 5"
                        HorizontalOptions="Start"/>
                <Button Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        WidthRequest="250"
                        HeightRequest="80"
                        Text="Add project"
                        Command="{Binding AddProjectClick}"
                        BackgroundColor="LimeGreen"
                        Margin="0, 5"
                        HorizontalOptions="End"/>
            </Grid>
            <Label Text="Your projects"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="30"/>
            <Label Text="{Binding User.LastName}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
            <ListView HasUnevenRows="True"
                      SelectedItem="{Binding ChosenProject}"
                      ItemsSource="{Binding Projets}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Project">
                        <ViewCell>
                            <StackLayout Margin="0,10">
                                <Label Text="{Binding Name}" FontSize="Medium"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid VerticalOptions="StartAndExpand"
                  ColumnSpacing="30"
                  >
                <!-- IsVisible="{Binding Clickable}" -->
                <Grid.RowDefinitions>
                    
                </Grid.RowDefinitions>
                <Button Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        HeightRequest="80"
                        Text="See project"
                        Command="{Binding ProjectClick}"
                        BackgroundColor="CornflowerBlue"
                        Margin="0, 5"
                        HorizontalOptions="Start"/>
                <Button Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        WidthRequest="250"
                        HeightRequest="80"
                        Text="Delete project"
                        Command="{Binding DeleteProjectClick}"
                        BackgroundColor="IndianRed"
                        Margin="0, 5"
                        HorizontalOptions="End"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>