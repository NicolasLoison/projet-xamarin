<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:projet="clr-namespace:Projet"
             xmlns:model="clr-namespace:Projet.Model;assembly=Projet"
             x:Class="Projet.TaskPage"
             x:DataType="projet:TaskViewModel">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center"
                     VerticalOptions="CenterAndExpand"
                     Margin="15, 10">
            
            <Label Text="{Binding Task.Id}"
                   FontSize="30"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Margin="0, 20, 0, 20"/>
            
            <Label Text="{Binding Task.Name}"
                   FontSize="15"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Margin="0, 0, 0, 10"/>
            
            <ListView HasUnevenRows="True"
                      ItemsSource="{Binding Timers}"
                      SelectedItem="{Binding ChosenTimer}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Timer">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal"
                                         VerticalOptions="CenterAndExpand">
                                <Label 
                                    VerticalOptions="CenterAndExpand"
                                    Text="{Binding Id}"
                                    FontSize="20"/>
                                <Label 
                                    VerticalOptions="CenterAndExpand"
                                    Text="{Binding StartTime}"
                                    FontSize="15"/>
                                <Label 
                                    VerticalOptions="CenterAndExpand"
                                    Text="{Binding EndTime}"
                                    FontSize="15"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>